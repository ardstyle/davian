<div class="gp-404-template">
  {% if settings.page_404_content != blank %}
    <div class="container">
      <div class="row">
        <div class="col-12">
          <div class="gp-404-content-wrapper align-{{ settings.page_404_content_alignment }} text-{{ settings.page_404_text_alignment }}">
            <div class="gp-404-content">
              {{ settings.page_404_content }}
            </div>
          </div>
        </div>
      </div>
    </div>
  {% else %}
    <div class="container">
      <div class="row">
        <div class="col-12 margin-top30 text-center">
          <h1>{{ 'general.404.title' | t }}</h1>
          <p>{{ 'general.404.subtext' | t }}</p>
          <p>
            <a href="/" class="btn btn--has-icon-after">{{ 'general.404.link' | t }}{% include 'icon-arrow-right' %}</a>
          </p>
        </div>
      </div>
    </div>
  {% endif %}
</div>
<style>
  body{
    margin: 0;
  }
  {% if settings.page_404_background_color != blank %}
    .gp-404-template{
      background-color: {{ settings.page_404_background_color }};
    }
  {% endif %}
  {% if settings.page_404_background_image != blank %}
    .gp-404-template{
      background-image: url({{ settings.page_404_background_image | img_url: 'master' }});
    }
  {% endif %}
  {% if settings.page_404_background_cover %}
    .gp-404-template{
      background-size: cover;
    }
  {% endif %}
  .gp-404-template{
    background-repeat: {{ settings.page_404_background_repeat }};
    background-position: {{ settings.page_404_background_pos_x }} {{ settings.page_404_background_pos_y }};
  }
  .gp-404-content-wrapper{
    display: flex;
    flex-wrap: wrap;
    width: 100%;
    height: 100vh;
    align-items: center;
  }
  .gp-404-content-wrapper.align-left{
    justify-content: flex-start;
  }
  .gp-404-content-wrapper.align-center{
    justify-content: center;
  }
  .gp-404-content-wrapper.align-right{
    justify-content: flex-end;
  }
  .gp-404-content-wrapper.text-left{
    text-align: left;
  }
  .gp-404-content-wrapper.text-center{
    text-align: center;
  }
  .gp-404-content-wrapper.text-right{
    text-align: right;
  }
  .gp-404-content *{
      color: {{ settings.page_404_text_color }};
  }
  .gp-404-content h1,
  .gp-404-content h2,
  .gp-404-content h3,
  .gp-404-content h4,
  .gp-404-content h5,
  .gp-404-content h6,
  .gp-404-content .h1,
  .gp-404-content .h2,
  .gp-404-content .h3,
  .gp-404-content .h4,
  .gp-404-content .h5,
  .gp-404-content .h6,
  .gp-404-content .title{
    color: {{ settings.page_404_heading_color }};
  }
  .gp-404-content a{
    color: {{ settings.page_404_link_color }};
  }
  .gp-404-content a:hover{
    color: {{ settings.page_404_link_hover_color }};
  }
</style>