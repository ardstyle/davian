      text-align: center;
      font-size: 20px;
    }
    &.active{
      left: 0;
      pointer-events: auto;
      z-index: 1000;
      .mobile-close-filter-slideout{
        right: -50px;
      }
    }
    &>.row-wrapper{
      overflow-x: hidden;
      overflow-y: auto;
      height: 100%;
      width: 100%;
      margin: 0;
      padding: 20px;
      display: block;
      background: #fff;
      .col{
        padding: 0;
        margin: 0;
      }
    }
    .col-sort-by{
      display: block;
    }
    .gp-cf-product-list, .gp-cf-banner, .gp-cf-text{
      display: none !important;
    }
    .gp-cf-inner, .sort-by-ul{
      border-bottom: 1px solid #eee;
      &> h5{
        text-transform: uppercase;
        margin: 0;
        padding: 10px 0;
        position: relative;
        font-size: 18px;
        line-height: 32px;
      }
    }
    .gp-cf-inner > h5.has-toggle, .sort-by-ul > h5{
      padding-right: 25px;
      cursor: pointer;
      &:after{
        display: block;
        position: absolute;
        content: "\e622";
        font-family: 'themify';
        right: 0;
        top: 50%;
        transform: translateY(-50%);
        font-size: 16px;
      }
      &.active:after{
        content: "\e61a";
      }
      & + div, & + ul{
        padding: 10px 0 20px;
        &:after{
          content: '';
          display: table;
          width: 100%;
        }
      }
    }
  }
  .collection-top-filter .filter-title, .filter-title{
    position: fixed;
    top: 30%;
    left: 0;
    background-color: #fff;
    padding: 5px;
    border: 1px solid #eee;
    z-index: 99;
    border-radius: 0 5px 5px 0;
    opacity: .8;
    line-height: 1;
    border-left: 0;
    span:not(.toggle-icon){
      display: none;
    }
    .toggle-icon{
      top: 0;
      transform: none;
      font-size: 25px;
      position: relative;
    }
    &.active{
      z-index: 999;
      &:after{
        content: '';
        display: block;
        width: 100vw;
        height: 100vh;
        position: fixed;
        background: rgba(0,0,0,0.6);
        top: 0;
        left: 0;
      }
    }
  }
}
/* COLLECTION SIDEBAR FILTER */
.collection-sidebar-filter{
  .col-sort-by{
    display: none;
  }
  .gp-collection-filter-wrapper{
    & > .row-wrapper > .col{
      -ms-flex: 0 0 100%;
      flex: 0 0 100%;
      max-width: 100%;
      &:last-child{
        margin-bottom: 0;
        .gp-cf-inner{
          border-bottom: none;
          margin: 0;
          padding: 0;
        }
      }
    }
    .gp-cf-inner{
      border-bottom: 1px solid #eee;
      &:after{
        content: '';
        display: table;
        width: 100%;
      }
      & > h5{
        text-transform: uppercase;
        margin: 0;
        padding: 10px 0;
        position: relative;
        &.has-toggle{
          padding-right: 25px;
          cursor: pointer;
          &:after{
            display: block;
            position: absolute;
            content: "\e622";
            font-family: 'themify';
            right: 0;
            top: 50%;
            transform: translateY(-50%);
            font-size: 16px;
          }
          &.active{
            &:after{
              content: "\e61a";
            }
          }
          &+div{
            padding: 10px 0 20px;
            &:after{
              content: '';
              display: table;
              width: 100%;
            }
          }
        }
      }
    }
    .gp-cf-product-list, .gp-cf-banner, .gp-cf-text{
      .gp-cf-inner{
        border: none;
        & > div{
          margin-top: 20px;
        }
        & > h5 + div{
          margin-top: 0;
        }
      }
      &:first-child {
        .gp-cf-inner > div{
          margin-top: 0;
        }
      }
    }
    .gp-cf-product-list{
      .owl-carousel{
        .owl-nav>button{
          &.owl-prev, &.owl-next{
            opacity: 0;
            pointer-events: none;
            transform: translateY(20px);
            top: 30%;
          }
        }
        &:hover{
          .owl-nav>button{
            &.owl-prev, &.owl-next{
              opacity: 1;
              pointer-events: auto;
              transform: translateY(0);
            }
          }
        }
        .product-card-item{
          margin: 0;
        }
      }
    }
  }
}