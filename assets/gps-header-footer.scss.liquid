/* WISHLIST SLIDEOUT */
.wishlist-slideout-container{
  &:before{
    position: fixed;
    top: 0;
    left: 0;
    right: auto;
    width: 100vw;
    height: 100vh;
    content: "";
    z-index: 100;
    transition: all 400ms;
    opacity: 0;
    visibility: hidden;
    background-color: rgba(0,0,0,0.6);
    pointer-events: none;
  }
  &.active{
    &:before{
      opacity: 1;
      visibility: visible;
      z-index: 999999;
    }
  }
}
.wishlist-slideout{
  text-align: left;
  position: fixed;
  top: 0;
  background-color: #fff;
  right: 0;
  height: 100%;
  width: 350px;
  max-width: calc(100vw - 40px);
  z-index: 100;
  transition: all 400ms;
  transform: translateX(100%);
  display: block !important;
  padding: 0;
  &.active{
    transform: translateX(0);
    -webkit-transform: translateX(0);
    -moz-transform: translateX(0);
    -o-transform: translateX(0);
    z-index: 1000000;
  }
  &.loading{
    .ajax-loader{
      display: block;
    }
  }
  .wishlist-slideout-inner{
    padding: 20px;
    z-index: 999;
    position: relative;
    height: 100%;
    color: $minicart_text_color;
    background: $minicart_background_color;
    .wishlist-dropdown-wrapper{
      height: 100%;
    }
    .header-wishlist-title{
      border-bottom: 1px solid $minicart_devide_border_color;
      padding-bottom: 10px;
    }
    h3{
      color: $minicart_heading_color;
      font-size: 15px;
      font-weight: 600;
      display: block;
      text-transform: uppercase;
    }
    .close_wishlist_slideout{
      color: $minicart_close_icon_color;
    }
    .empty{
      display: block;
      font-size: 14px;
      padding: 20px 0 5px;
      font-weight: 500;
      color: $minicart_text_color;
    }
    .wishlist-items-wrapper{
      margin: 0 -15px;
      overflow-x: hidden;
      overflow-y: auto;
      padding: 15px 15px 0;
      max-height: calc(100% - 33px);
      overflow-x: hidden;
      overflow-y: auto;
      /* width */
      &::-webkit-scrollbar {
        width: 12px;
      }

      /* Track */
      &::-webkit-scrollbar-track {
        background: #eee; 
      }
      
      /* Handle */
      &::-webkit-scrollbar-thumb {
        background: #ddd; 
      }
    }
    .wishlist-items{
      height: auto;
      .product-item{
        padding: 15px 0;
        &:after{
          content:'';
          display: table;
          width: 100%;
        }
        &:first-child{
          padding-top: 0;
        }
        &:not(:first-child) {
          border-top: 1px solid $minicart_devide_border_color;
        }
        &:last-child{
          padding-bottom: 0;
        }
        .image{
          float: left;
          width: 100px;
          .hover-change-img{
            border: none;
            background: none;
            display: block;
          }
          img{
            display: block;
            &+img{
              display: none;
            }
          }
        }

        .product-item-details{
          float: left;
          width: calc(100% - 100px);
          padding-left: 20px;
        }
        .product-item-name{
          font-size: 16px;
          font-weight: 400;
          display: block;
          margin-bottom: 5px;
        }
        .price{
          font-weight: 700;
          font-size: 16px;
          color: $color_price;
        }
        .image .product-buttons, .product-labels, .btn-wishlist, .btn-quick-view, .btn-compared{
          display: none;
        }
        .product-buttons{
          margin-top: 10px;
          display: flex;
          flex-wrap: wrap;
          width: 100%;
          justify-content: space-between;
          align-items: center;
        }
        .btn{
          padding: 0 10px;
        }
        .btn-remove-wishlist{
          &:before{
            -webkit-font-smoothing: antialiased;
            font-size: 18px;
            line-height: 20px;
            content: "\e605";
            font-family: 'themify';
            vertical-align: middle;
            display: inline-block;
            font-weight: normal;
            overflow: hidden;
            speak: none;
            text-align: center;
          }
        }
      }
    }
  }
  .wishlist-items-wrapper{
    height: 100%;
    margin: 0 -20px;
    max-height: unset;
  } 
  .btn-wishlist-close{
    position: absolute;
    top: 20px;
    right: 20px;
    border: none;
    padding: 0;
    background: none;
    cursor: pointer;
    font-size: 14px;
    font-weight: 500;
    letter-spacing: 0;
    box-shadow: none !important;
    &:after{
      content: "\e646";
      display: block;
      font-family: "themify";
      font-size: 20px;
      line-height: 20px;
    }
  }
}

