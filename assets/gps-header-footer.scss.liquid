  .switcher-currency{
    .currency-picker__wrapper{
      margin: 0;
      position: relative;
      &:after{
        content: "\e64b";
        font-family: "themify";
        font-size: 9px;
        margin-left: 6px;
        position: absolute;
        right: 20px;
        top: 50%;
        transform: translateY(-50%);
        pointer-events: none;
      }
    }
    .currency-picker{
      border: 0;
      height: 47px;
      background: none;
