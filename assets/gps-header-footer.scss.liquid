/* HEADER ANNOUNCEMENT BAR */
.announcement-bar {
  background-color: {{ settings.header_bar_color_bg }};
}

.announcement-bar--link:hover {
  {% assign brightness = settings.header_bar_color_bg | color_brightness %}

  {% if brightness <= 192 %}
    {% assign lightenAmount = 255 | minus: brightness | divided_by: 255 | times: 16 %}
    background-color: {{ settings.header_bar_color_bg | color_lighten: lightenAmount }};
  {% else %}
    {% assign darkenAmount = 255 | divided_by: brightness | times: 8 %}
    background-color: {{ settings.header_bar_color_bg | color_darken: darkenAmount }};
  {% endif %}
}

.announcement-bar__message {
  color: {{ settings.header_bar_color_text }};
}
/* END HEADER ANNOUNCEMENT BAR */

/* HEADER COMMON */
.site-header{
  padding: 0;
  position: relative;
  top: 0;
  right: 0;
  left: 0;
  z-index: 999;
  transition: all 300ms;
  background-color: $header_background_color;
  background-size: $header_background_cover;
  background-repeat: $header_background_repeat;
  background-position: $header_background_pos_x $header_background_pos_y;
  border-top: $header_border_top_size solid $header_border_top_color;
  border-bottom: $header_border_bottom_size solid $header_border_bottom_color;
  .header-custom-content{
    padding: 13px 20px;
  }
  .top-header-content, .middle-header-content, .bottom-header-content{
    .border-left, &.border-left, .child-border-left > *{
      border-left: 1px solid;
    }
    .border-right, &.border-right, .child-border-right > *{
      border-right: 1px solid;
    }
    .border-top, &.border-top, .child-border-top > *{
      border-top: 1px solid;
    }
    .border-bottom, &.border-bottom, .child-border-bottom > *{
      border-bottom: 1px solid;
    }
  }
  .top-header-content{
    background-color: $header_top_background_color;
    color: $header_top_text_color;
    -ms-flex-wrap: wrap;
    flex-wrap: wrap;
    align-items: center;
    justify-content: space-between;
    position: relative;
    display: flex;
    .top-header-left{
      display: flex;
      flex-wrap: wrap;
      align-items: center;
      &>*{
        float: left;
        &:first-child{
          border-left: none;
        }
      }
    }
    .top-header-right{
      display: flex;
      flex-wrap: wrap;
      align-items: center;
      &>*{
        float:left;
        &:first-child{
          border-left: none;
        }
      }
    }
    select{
      color: $header_top_text_color;
    }
    a{
      color: $header_top_link_color;
      &:hover{
        color: $header_top_link_hover_color;
        [class*=" ti-"], [class^=ti-]{
          color: $header_top_icon_hover_color;
        }
      }
    }
    [class*=" ti-"], [class^=ti-]{
      color: $header_top_icon_color;
      &:hover{
        color: $header_top_icon_hover_color;
      }
    }
    .header-search.show-on-click .block-title{
      &:after{
        color: $header_top_icon_color;
      }
      &:hover:after{
        color: $header_top_icon_hover_color;
      }
      &:before{
        background-color: $header_top_border_color;
      }
    }
    .header-cart .action-cart{
      &:before{
        color: $header_top_icon_color;
      }
      &:hover:before{
        color: $header_top_icon_hover_color;
      }
    }
    [class*=" border-"], &[class*=" border-"], [class*=" child-border-"] > *, [class^="child-border-"] > *, [class^="border-"], &[class^="border-"] {
      border-color: $header_top_border_color;
    }
  }
  .middle-header-content{
    background-color: $header_middle_background_color;
    background-repeat: $header_middle_background_repeat;
    background-position: $header_middle_background_pos_x $header_middle_background_pos_y;
    background-size: $header_middle_background_cover;
    color: $header_middle_text_color;
    select{
      color: $header_middle_text_color;
    }
    a{
      color: $header_middle_link_color;
      &:hover{
        color: $header_middle_link_hover_color;
        [class*=" ti-"], [class^=ti-]{
          color: $header_middle_icon_hover_color;
        }
      }
    }
    [class*=" ti-"], [class^=ti-]{
      color: $header_middle_icon_color;
      &:hover{
        color: $header_middle_icon_hover_color;
      }
    }
    .header-search.show-on-click .block-title{
      &:after{
        color: $header_middle_icon_color;
      }
      &:hover:after{
        color: $header_middle_icon_hover_color;
      }
      &:before{
        background-color: $header_middle_border_color;
      }
    }
    .header-cart .action-cart{
      &:before{
        color: $header_middle_icon_color;
      }
      &:hover:before{
        color: $header_middle_icon_hover_color;
      }
    }
    [class*=" border-"], &[class*=" border-"], [class*=" child-border-"] > *, [class^="child-border-"] > *, [class^="border-"], &[class^="border-"] {
      border-color: $header_middle_border_color;
    }
  }
  .bottom-header-content{
    background-color: $header_bottom_background_color;
    color: $header_bottom_text_color;
    select{
      color: $header_bottom_text_color;
    }
    a{
      color: $header_bottom_link_color;
      &:hover{
        color: $header_bottom_link_hover_color;
        [class*=" ti-"], [class^=ti-]{
          color: $header_bottom_icon_hover_color;
        }
      }
    }
    [class*=" ti-"], [class^=ti-]{
      color: $header_bottom_icon_color;
      &:hover{
        color: $header_bottom_icon_hover_color;
      }
    }
    .header-search.show-on-click .block-title{
      &:after{
        color: $header_bottom_icon_color;
      }
      &:hover:after{
        color: $header_bottom_icon_hover_color;
      }
      &:before{
        background-color: $header_bottom_border_color;
      }
    }
    .header-cart .action-cart{
      &:before{
        color: $header_bottom_icon_color;
      }
      &:hover:before{
        color: $header_bottom_icon_hover_color;
      }
    }
    [class*=" border-"], &[class*=" border-"], [class*=" child-border-"] > *, [class^="child-border-"] > *, [class^="border-"], &[class^="border-"] {
      border-color: $header_bottom_border_color;
    }
  }
}

.toggle_menu_mobile{
  color: #333333;
  font-size: 18px;
  height: 100%;
  position: relative;
  cursor: pointer;
  span{
    position: relative;
    top: 50%;
    transform: translateY(-50%);
    padding: 10px 0 10px 18px;
    display: block;
  }
}
@media (max-width: 479px) {
  .toggle_menu_mobile span{
    padding-left: 10px;
  }
}
.template-index{
  #header{
    &.is_absolute{
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      &:not(.nav-up):not(.nav-down){
        background: transparent;
        .site-header{
          background: transparent;
          border-color: transparent;
          .top-header-content, .middle-header-content, .bottom-header-content{
            background: transparent;
            [class*=" border-"], &[class*=" border-"], [class*=" child-border-"] > *, [class^="child-border-"] > *, [class^="border-"], &[class^="border-"] {
              border-color: transparent;
            }
            .header-search.show-on-click .block-title:before{
              background-color: transparent;
            }
          }
        }
      }
    }
  }
}
/* END HEADER COMMON */

/* STICKY HEADER */
@media (min-width: 768px) {
  .sticky-header .site-header{
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    transition: all 0.4s;
    transform: translateY(0);
  }
  #pd-sticky-mobile{
    display: none;
  }
  #header{
    &.nav-up{
      &.sticky-header .site-header {
        transform: translateY(-100%);
      }
    }
    &.nav-up, &.nav-down{
      &.is_absolute{
        .site-header{
          background: #fff;
        }
      }
    }
  }
}
@media (max-width: 767px) {
  .sticky-header-mobile .site-header{
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    transition: all 0.4s;
    transform: translateY(0);
  }
  #pd-sticky{
    display: none;
  }
  #header{
    &.nav-up{
      &.sticky-header-mobile .site-header {
        transform: translateY(-100%);
      }
    }
    &.nav-up, &.nav-down{
      &.is_absolute{
        .site-header{
          background: #fff;
        }
      }
    }
  }
}
/* END STICKY HEADER */

/* HEADER CURRENCY */
