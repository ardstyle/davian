/* HEADER ACCOUNT */
.site-header{
  .my-account-link{
    position: relative;
    &:hover{
      .toplinks-content{
        opacity: 1;
        visibility: visible;
        transform: translateY(0);
      }
    }
    .toggle-action{
      padding: 13px 20px;
      display: block;
      &:after{
        content: "\e64b";
        font-family: "themify";
        font-size: 9px;
        margin-left: 6px;
      }
    }
    .toplinks-content{
      position: absolute;
      top: 100%;
      right: -1px;
      border: 1px solid #eeeeee;
      background-color: $header_top_background_color;
      z-index: 2;
      opacity: 0;
      visibility: hidden;
      display: block;
      transition: all 300ms;
      transform: translateY(20px);
      li{
        &:last-child{
          a{
            border-bottom: 0;
          }
        }
        a{
          display: block;
          white-space: nowrap;
          padding: 8px 20px 9px;
          border-bottom: 1px solid #eeeeee;
        }
      }
      &.active{
        opacity: 1;
        visibility: visible;
        transform: translateY(0);
      }
    }
  }
}
/* END HEADER ACCOUNT */

