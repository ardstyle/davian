{% assign body_width = '100%' %}
{% case settings.general_width %}
  {% when 'general-width-1200px' %}
    {% assign body_width = '1230px' %}
  {% when 'general-width-1366px' %}
    {% assign body_width = '1396px' %}
  {% when 'general-width-1920px' %}
    {% assign body_width = '1950px' %}
  {% else %}
    {% assign body_width = '100%' %}
{% endcase %}
$body_width: {{ body_width }};

.lazyload-parent{
  border: 1px solid #eee;
  background: #fafafa url(three-dots-black.svg) no-repeat center center/ 60px;
  img{
    transition: opacity 0.3s;
  }
  &.child-image-loaded{
    background: none;
    border: none;
  }
}
img.lazyload, img.lazyloading{
  opacity: 0;
}
/* COMMON STYLE */
.index-section{
  padding: 0;
}
.gp-section-wrapper{
  .gp-section-inner{
    overflow: hidden;
    &.gp-slideshow{
      overflow: visible;
    }
  }
  &.not-fullwidth-section{
    .gp-section-inner{
      width: 100%;
      max-width: $body_width;
      padding-left: 15px;
      padding-right: 15px;
      margin-left: auto;
      margin-right: auto;
    }
  }
}
@media (max-width: 767px) {
  .gp-section-wrapper{
    .section-heading-content{
      h1, .h1, h2, .h2, h3, .h3{
        font-size: 25px;
        line-height: 1.2;
        letter-spacing: 0.5px;
      }
    }
  }
}

/* END COMMON STYLE */

/* SECTION GP-SLIDESHOW */
.gp-slideshow{
  position: relative;
  &:before{
    left: -15px;
    right: -15px;
    content: "";
    display: block;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: #fafafa;
    opacity: 1;
    visibility: visible;
    transition: all 500ms;
    -webkit-transition: all 500ms;
    -moz-transition: all 500ms;
    -o-transition: all 500ms;
    z-index: 999;
  }
  &:after{
    content: url('three-dots-black.svg');
    font-size: 30px;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    -webkit-transform: translate(-50%, -50%);
    -moz-transform: translate(-50%, -50%);
    -o-transform: translate(-50%, -50%);
    opacity: 1;
    visibility: visible;
    transition: all 500ms;
    -webkit-transition: all 500ms;
    -moz-transition: all 500ms;
    -o-transition: all 500ms;
    z-index: 999;
  }
  &:not(.loaded){
    min-height: 600px;
  }
  &.loaded{
    &:before, &:after{
      opacity: 0;
      visibility: hidden;
    }
  }
  .slide-item{
    position: relative;
  }
  .slide-content-wrapper{
    position: absolute;
    top: 0;
    left: 0;
    display: flex;
    flex-wrap: wrap;
    width: 100%;
    height: 100%;
    &:not(.position-custom):not(.position-custom-horizontal):not(.position-custom-vertical){
      .slide-content-inner{
        padding: 80px;
      }
    }
    .slide-content-inner{
      padding: 20px;
      &.text-align-left{
        text-align: left;
      }
      &.text-align-center{
        text-align: center;
      }
      &.text-align-right{
        text-align: right;
      }
      .line{
        content: '';
        width: 50px;
        display: inline-block;
        height: 1px;
        background: #000;
        margin: 0 15px;
        position: relative;
        top: -4px;
      }
      .title{
        font-weight: 400;
        font-size: 48px;
        line-height: 1.32;
        letter-spacing: normal;
      }
      a{
        font-weight: 500;
        font-size: 14px;
        letter-spacing: 0.1em;
        text-transform: uppercase;
        border-bottom: 1px solid;
        display: inline-block;
        &:not([class*="margin"]) {
          margin-top: 30px;
        }
        &.rounded{
          border: 1px solid;
          padding: 10px 20px;
        }
      }
      p{
        &:not(:first-child){
          margin-top: 10px;
          margin-bottom: 0;
        }
      }
    }
    &.position-middle-center{
      justify-content: center;
      align-items: center;
    }
    &.position-middle-left{
      justify-content: flex-start;
      align-items: center;
    }
    &.position-middle-right{
      justify-content: flex-end;
      align-items: center;
    }
    &.position-top-center{
      justify-content: center;
      align-items: flex-start;
    }
    &.position-top-left{
      justify-content: flex-start;
      align-items: flex-start;
    }
    &.position-top-right{
      justify-content: flex-end;
      align-items: flex-start;
    }
    &.position-bottom-center{
      justify-content: center;
      align-items: flex-end;
    }
    &.position-bottom-left{
      justify-content: flex-start;
      align-items: flex-end;
    }
    &.position-bottom-right{
      justify-content: flex-end;
      align-items: flex-end;
    }
    &.position-custom{
      display: block;
      .slide-content-inner{
        position: absolute;
      }
    }
    &.position-custom-horizontal{
      align-items: center;
      &.position-x-left-to-right{
        justify-content: flex-start;
      }
      &.position-x-right-to-left{
        justify-content: flex-end;
      }
      .slide-content-inner{
        position: relative;
      }
    }
    &.position-custom-vertical{
      justify-content: center;
      &.position-y-top-to-bottom{
        align-items: flex-start;
      }
      &.position-y-bottom-to-top{
        align-items: flex-end;
      }
      .slide-content-inner{
        position: relative;
      }
    }
  }
  &.nav-dot-1{
    &:hover{
      .owl-nav > button{
        visibility: visible;
        opacity: 1;
        &:not(.disabled):hover{
          transform: scale(1);
        }
      }
    }
    .owl-nav > button{
      visibility: hidden;
      opacity: 0;
      transform: scale(0.7);
    }
    .owl-dots{
      position: absolute;
      bottom: 20px;
      left: 50%;
      transform: translateX(-50%);
      width: auto;
    }
  }
  &.nav-dot-2{
    .owl-nav > button{
      transform: scale(0.7);
      &:not(.disabled):hover{
        transform: scale(1);
      }
      &.owl-prev{
        left: -50px;
        right: auto;
      }
      &.owl-next{
        right: -50px;
        left: auto;
      }
    }
  }
  &.nav-dot-3{
    &:hover{
      .owl-nav > button{
        visibility: visible;
        opacity: 1;
        &:not(.disabled):hover{
          transform: scale(1);
        }
      }
    }
    .owl-nav > button{
      visibility: hidden;
      opacity: 0;
      transform: scale(0.7);
    }
  }
  &.nav-dot-4{
    .owl-dots{
      position: absolute;
      right: 98px;
      left: auto;
      bottom: auto;
      top: 50%;
      transform: translateY(-50%);
      margin: 0;
      .owl-dot{
        display: block;
        margin: 7px 0;
        padding: 0 !important;
        &.active{
          span{
            border-color: #696969;
            background-color: transparent;
          }  
        }
        span{
          margin: 0 auto;
          border: 1px solid #aeaeae;
          background-color: #aeaeae;
        }
      }
    }
    .index-slider{
      position: absolute;
      right: 97px;
      bottom: 53px;
      z-index: 1;
      font-size: 34px;
      color: #cccccc;
      font-weight: 300;
      line-height: 1;
      .current{
        color: #333333;
        margin-right: 23px;
        font-size: 56px;
      }
      .all-index:before{
        content: "/";
        margin-right: 5px;
      }
    }
  }
  &.nav-dot-5{
    &:hover{
      .owl-nav > button{
        visibility: visible;
        opacity: 1;
        &:not(.disabled):hover{
          transform: scale(1);
        }
      }
    }
    .owl-nav > button{
      visibility: hidden;
      opacity: 0;
      transform: scale(0.7);
    }
    .index-slider{
      position: absolute;
      right: 97px;
      bottom: 53px;
      z-index: 1;
      font-size: 34px;
      color: #cccccc;
      font-weight: 300;
      line-height: 1;
      .current{
        color: #333333;
        margin-right: 30px;
      }
      .all-index{
        padding-left: 130px;
        position: relative;
        &:before{
          content: "";
          height:1px;
          width: 100px;
          background-color: #cccccc;
          position: absolute;
          left: 0;
          top: 50%;
        }
      }
    }
  }
}
@media (max-width: 1199px) and (min-width: 992px) {
  .gp-slideshow{
    &:not(.loaded){
      min-height: 400px;
    }
    .slide-content-wrapper:not(.position-custom):not(.position-custom-horizontal):not(.position-custom-vertical) .slide-content-inner{
      padding: 50px;
    }
  }
}
@media (max-width: 1199px) {
  .gp-slideshow.nav-dot-2 .owl-nav>button{
    &.owl-prev{
      left: 10px;
    }
    &.owl-next{
      right: 10px;
    }
  }
}
@media (max-width: 991.98px) {
  .gp-slideshow{
    &:not(.loaded){
      min-height: 300px;
    }
    &.nav-dot-5 .index-slider{
      right: 30px;
      bottom: 30px;
      font-size: 30px;
      .current{
        margin-right: 10px;
      }
      .all-index{
        padding-left: 60px;
        &:before{
          width: 50px;
        }
      }
    }
    .slide-content-wrapper{
      &:not(.position-custom):not(.position-custom-horizontal):not(.position-custom-vertical) .slide-content-inner{
        padding: 40px;
      }
      .slide-content-inner{
        .title{
          font-size: 40px;
        }
      }
    }
  }
}
@media (max-width: 767px) {
  .gp-slideshow{
    .owl-nav{
      display: none;
    }
    &.nav-dot-5 .index-slider{
      display: none;
    }
    .slide-content-wrapper{
      &:not(.position-custom):not(.position-custom-horizontal):not(.position-custom-vertical){
        align-items: center !important;
        .slide-content-inner{
          padding: 20px;
        }
      }
      &.position-custom{
        align-items: center;
        display: flex;
        &.left-to-right{
          justify-content: flex-start;
        }
        &.right-to-left{
          justify-content: flex-end;
        }
        .slide-content-inner{
          position: static;
        }
      }
      &.position-custom-horizontal{
        &.position-x-left-to-right{
          .slide-content-inner{
            left: 0 !important;
          }
        }
        &.position-x-right-to-left{
          .slide-content-inner{
            right: 0 !important;
          }
        }
      }
      &.position-custom-vertical{
        &.position-y-top-to-bottom{
          .slide-content-inner{
            top: 0 !important;
          }
        }
        &.position-y-bottom-to-top{
          .slide-content-inner{
            bottom: 0 !important;
          }
        }
      }
      .slide-content-inner{
        p{
          margin-bottom: 0 !important;
          &:last-child{
            margin-bottom: 0 !important;
          }
        }
        .title, h1, h2, .h1, .h2{
          font-size: 30px !important;
          line-height: 1.32 !important;
        }
        a{
          &:not([class*="margin"]){
            margin-top: 10px;
          }
        }
      }
    }
  }
}
/* END SECTION GP-SLIDESHOW */

/* SECTION GP-PROMO-BANNER */
.banner-item{
  position: relative;
  margin-bottom: 20px;
  overflow: hidden;
  &.effect-zoom{
    &:hover{
      .banner-item-img img{
        transform:scale(1.1);
        -webkit-transform:scale(1.1);
        -moz-transform:scale(1.1);
        -o-transform:scale(1.1);
      }
    }
    .banner-item-img img{
      transform:scale(1);
      -webkit-transform:scale(1);
      -moz-transform:scale(1);
      -o-transform:scale(1);
      transition:all .3s ease-out 0s;
      -webkit-transition:all .3s ease-out 0s;
      -moz-transition:all .3s ease-out 0s;
      -o-transition:all .3s ease-out 0s;
    }
  }
  &.effect-border-zoom{
    &:hover{
      &:before{
        top:15px;
        bottom:15px;
        right:15px;
        left:15px;
        z-index:9;
      }
      .banner-item-img img{
        transform:scale(1.1);
        -webkit-transform:scale(1.1);
        -moz-transform:scale(1.1);
        -o-transform:scale(1.1);
      }
    }
    &:before{
      border:2px solid #fff;
      top:-2px;
      bottom:-2px;
      right:-2px;
      left:-2px;
      content:'';
      display:block;
      position:absolute;
      transition:all .5s ease-out 0s;
      -webkit-transition:all .5s ease-out 0s;
      -moz-transition:all .5s ease-out 0s;
      -o-transition:all .5s ease-out 0s;
      pointer-events: none;
    }
    .banner-item-img img{
      transform:scale(1);
      -webkit-transform:scale(1);
      -moz-transform:scale(1);
      -o-transform:scale(1);
      transition:all .5s ease-out 0s;
      -webkit-transition:all .5s ease-out 0s;
      -moz-transition:all .5s ease-out 0s;
      -o-transition:all .5s ease-out 0s;
    }
  }
  &.effect-flashed{
    &:hover{
      &:after{
        transform:scale3d(1.9,1.4,1) rotate3d(0,0,1,45deg) translate3d(0,300%,0);
        -webkit-transform:scale3d(1.9,1.4,1) rotate3d(0,0,1,45deg) translate3d(0,300%,0);
        -moz-transform:scale3d(1.9,1.4,1) rotate3d(0,0,1,45deg) translate3d(0,300%,0);
        -o-transform:scale3d(1.9,1.4,1) rotate3d(0,0,1,45deg) translate3d(0,300%,0);
      }
    }
    &:after{
      position:absolute;
      top:0;
      left:0;
      width:1000px;
      height:200px;
      background:rgba(255,255,255,0.5);
      content:'';
      transition:transform .6s;
      -webkit-transition:transform .6s;
      -moz-transition:transform .6s;
      -o-transition:transform .6s;
      transform:scale3d(1.9,1.4,1) rotate3d(0,0,1,45deg) translate3d(0,-100%,0);
      -webkit-transform:scale3d(1.9,1.4,1) rotate3d(0,0,1,45deg) translate3d(0,-100%,0);
      -moz-transform:scale3d(1.9,1.4,1) rotate3d(0,0,1,45deg) translate3d(0,-100%,0);
      -o-transform:scale3d(1.9,1.4,1) rotate3d(0,0,1,45deg) translate3d(0,-100%,0);
      z-index: 1;
      pointer-events: none;
    }
  }
  &.effect-zoom-flashed{
    &:hover{
      &:after{
        transform:scale3d(1.9,1.4,1) rotate3d(0,0,1,45deg) translate3d(0,300%,0);
        -webkit-transform:scale3d(1.9,1.4,1) rotate3d(0,0,1,45deg) translate3d(0,300%,0);
        -moz-transform:scale3d(1.9,1.4,1) rotate3d(0,0,1,45deg) translate3d(0,300%,0);
        -o-transform:scale3d(1.9,1.4,1) rotate3d(0,0,1,45deg) translate3d(0,300%,0);
      }
      .banner-item-img img{
        transform:scale(1.1);
        -webkit-transform:scale(1.1);
        -moz-transform:scale(1.1);
        -o-transform:scale(1.1);
      }
    }
    &:after{
      position:absolute;
      top:0;
      left:0;
      width:1000px;
      height:200px;
      background:rgba(255,255,255,0.5);
      content:'';
      transition:transform .7s;
      -webkit-transition:transform .7s;
      -moz-transition:transform .7s;
      -o-transition:transform .7s;
      transform:scale3d(1.9,1.4,1) rotate3d(0,0,1,45deg) translate3d(0,-100%,0);
      -webkit-transform:scale3d(1.9,1.4,1) rotate3d(0,0,1,45deg) translate3d(0,-100%,0);
      -moz-transform:scale3d(1.9,1.4,1) rotate3d(0,0,1,45deg) translate3d(0,-100%,0);
      -o-transform:scale3d(1.9,1.4,1) rotate3d(0,0,1,45deg) translate3d(0,-100%,0);
      pointer-events: none;
      z-index: 1;
    }
    .banner-item-img img{
      transition:all .5s ease 0s;
      -webkit-transition:all .5s ease 0s;
      -moz-transition:all .5s ease 0s;
      -o-transition:all .5s ease 0s;
    }
  }
  &.effect-shadow-corner{
    transition:all .2s ease 0s;
    -webkit-transition:all .2s ease 0s;
    -moz-transition:all .2s ease 0s;
    -o-transition:all .2s ease 0s;
    &:hover{
      box-shadow:2px 3px 3px rgba(0,0,0,0.2);
    }
  }
  &.effect-zoom-shadow{
    &:hover{
      &:after{
        left:0;
        right:0;
        bottom:0;
        top:0;
      }
    }
    &:after{
      position:absolute;
      content:"";
      left:20px;
      right:20px;
      bottom:20px;
      top:20px;
      background:#000000;
      opacity:0.4;
      transition:all .3s ease-in-out 0s;
      -webkit-transition:all .3s ease-in-out 0s;
      -moz-transition:all .3s ease-in-out 0s;
      -o-transition:all .3s ease-in-out 0s;
      pointer-events: none;
      z-index: 1;
    }
  }
  &.effect-cup-border{
    overflow:visible;
    &:hover{
      &:after{
        opacity:1;
        transform:translate(15px, 15px);
        -webkit-transform:translate(15px, 15px);
        -moz-transform:translate(15px, 15px);
        -o-transform:translate(15px, 15px);
      }
    }
    &:after{
      border:2px solid #ddbe86;
      position:absolute;
      left:0;
      bottom:0;
      top:0;
      right:0;
      content:"";
      opacity:0;
      transform:translate(0);
      -webkit-transform:translate(0);
      -moz-transform:translate(0);
      -o-transform:translate(0);
      transition:all .3s ease;
      -webkit-transition:all .3s ease;
      -moz-transition:all .3s ease;
      -o-transition:all .3s ease;
      pointer-events: none;
    }
  }
  &.effect-flashed-zoom{
    &:hover{
      &:after{
        opacity:0;
        transform:translate(-50%,-50%) rotate(45deg) scale(1);
        -webkit-transform:translate(-50%,-50%) rotate(45deg) scale(1);
        -moz-transform:translate(-50%,-50%) rotate(45deg) scale(1);
        -o-transform:translate(-50%,-50%) rotate(45deg) scale(1);
      }
      .banner-item-img img{
        transform:scale(1.1);
        -webkit-transform:scale(1.1);
        -moz-transform:scale(1.1);
        -o-transform:scale(1.1);
      }
    }
    &:after{
      position:absolute;
      content:"";
      width:100%;
      padding-top:100%;
      top:50%;
      left:50%;
      opacity:1;
      background:#fff;
      transform:translate(-50%,-50%) rotate(45deg) scale(0);
      -webkit-transform:translate(-50%,-50%) rotate(45deg) scale(0);
      -moz-transform:translate(-50%,-50%) rotate(45deg) scale(0);
      -o-transform:translate(-50%,-50%) rotate(45deg) scale(0);
      transition:all 400ms ease-in-out;
      -webkit-transition:all 400ms ease-in-out;
      -moz-transition:all 400ms ease-in-out;
      -o-transition:all 400ms ease-in-out;
      pointer-events: none;
      z-index: 1;
    }
    .banner-item-img img{
      transition:all 400ms ease-in-out;
      -webkit-transition:all 400ms ease-in-out;
      -moz-transition:all 400ms ease-in-out;
      -o-transition:all 400ms ease-in-out
    }
  }
  &.effect-zoom-out-shadow{
    &:hover{
      &:after{
        left:15px;
        right:15px;
        bottom:15px;
        top:15px;
      }
    }
    &:after{
      position:absolute;
      content:"";
      left:-10px;
      right:-10px;
      bottom:-10px;
      top:-10px;
      border:2px solid #fff;
      outline-width:15px;
      outline-style:solid;
      outline-color:rgba(0,0,0,0.3);
      z-index:100;
      transition:all 300ms ease-in-out;
      -webkit-transition:all 300ms ease-in-out;
      -moz-transition:all 300ms ease-in-out;
      -o-transition:all 300ms ease-in-out;
      pointer-events: none;
    }
  }
  &.effect-mist{
    &:hover{
      &:after{
        transform:scaleY(1);
        -webkit-transform:scaleY(1);
        -moz-transform:scaleY(1);
        -o-transform:scaleY(1);
        opacity:1;
        visibility:visible;
      }
    }
    &:after{
      position:absolute;
      z-index:1;
      background-color:rgba(255,255,255,0.8);
      content:"";
      top:0;
      right:0;
      bottom:0;
      left:0;
      opacity:0;
      visibility:hidden;
      transform:scaleY(0);
      -webkit-transform:scaleY(0);
      -moz-transform:scaleY(0);
      -o-transform:scaleY(0);
      transform-origin:50% 100%;
      -webkit-transform-origin:50% 100%;
      -ms-transform-origin:50% 100%;
      -moz-transform-origin:50% 100%;
      -o-transform-origin:50% 100%;
      transition:all 300ms ease-in-out;
      -webkit-transition:all 300ms ease-in-out;
      -moz-transition:all 300ms ease-in-out;
      -o-transition:all 300ms ease-in-out;
      pointer-events: none;
    }
  }
  &.effect-mist-text{
    &:hover{
      &:after{
        opacity:1;
        visibility:visible;
        transform:scaleX(1);
        -webkit-transform:scaleX(1);
        -moz-transform:scaleX(1);
        -o-transform:scaleX(1);
      }
    }
    &:after{
      position:absolute;
      z-index:1;
      background-color:rgba(255,255,255,0.8);
      content:"";
      top:0;
      right:0;
      bottom:0;
      left:0;
      opacity:0;
      visibility:hidden;
      transform:scaleX(0);
