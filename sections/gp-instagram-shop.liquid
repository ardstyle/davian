{% include 'gp-section-style' %}
<div data-section-id="{{ section.id }}" data-section-type="instagram-shop-section" style="{{ section_style }}" class="gp-section-wrapper {% unless section.settings.fullwidth %}not-fullwidth-section{% endunless %}">
  <div class="gp-instagram-shop gp-section-inner">
    <div class="row">
      {% if section.blocks.size > 0 %}
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'instagram_shop' %}
              <div class="col-12" {{ block.shopify_attributes }}>
                <div class="instagram-shop-wrapper">
                  {% if block.settings.social_snapppt_embed_code != blank %}
                    {{ block.settings.social_snapppt_embed_code }}
                  {% else %}
                    <div class="row">
                      {% for i in (1..12) %}
                        <div class="col-md-3 margin-bottom30">
                          {% capture current %}{% cycle 1, 2, 3, 4, 5, 6 %}{% endcapture %}
                          {{ 'product-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
                        </div>
                      {% endfor %}
                    </div>
                  {% endif %}
                </div>
              </div>
            {% else %}
              {% include 'gp-block-heading' %}
          {% endcase %}
        {% endfor %}
      {% endif %}
    </div>
  </div>
</div>
