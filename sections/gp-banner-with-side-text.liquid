{% include 'gp-section-style' %}
<div data-section-id="{{ section.id }}" data-section-type="gp-banner-with-side-text-section" class="gp-section-wrapper {% unless section.settings.fullwidth %}not-fullwidth-section{% endunless %}">
  <div class="gp-banner-with-side-text gp-section-inner">
    <div class="row">
      {% if section.blocks.size > 0 %}
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'banner' %}
              <div class="col-md-{{ block.settings.columns }} col-12" {{ block.shopify_attributes }}>
                {% include 'gp-banner-with-text-html' %}
              </div>
            {% when 'text' %}
              {% if block.settings.content != blank %}
                <div class="col-md-{{ block.settings.columns }} col-12 margin-bottom20" {{ block.shopify_attributes }}>
                  <div class="block-text-wrapper align-{{ block.settings.text_alignment }} position-{{ forloop.index }}">
                    {{ block.settings.content }}
                  </div>
                </div>
                <style>
                  [data-section-id="{{ section.id }}"] .position-{{ forloop.index }}.block-text-wrapper *{
                    color: {{ block.settings.text_color }};
                  }
                  [data-section-id="{{ section.id }}"] .position-{{ forloop.index }}.block-text-wrapper h1,
                  [data-section-id="{{ section.id }}"] .position-{{ forloop.index }}.block-text-wrapper h2,
                  [data-section-id="{{ section.id }}"] .position-{{ forloop.index }}.block-text-wrapper h3,
                  [data-section-id="{{ section.id }}"] .position-{{ forloop.index }}.block-text-wrapper h4,
                  [data-section-id="{{ section.id }}"] .position-{{ forloop.index }}.block-text-wrapper h5,
                  [data-section-id="{{ section.id }}"] .position-{{ forloop.index }}.block-text-wrapper h6,
                  [data-section-id="{{ section.id }}"] .position-{{ forloop.index }}.block-text-wrapper .h1,
                  [data-section-id="{{ section.id }}"] .position-{{ forloop.index }}.block-text-wrapper .h2,
                  [data-section-id="{{ section.id }}"] .position-{{ forloop.index }}.block-text-wrapper .h3,
                  [data-section-id="{{ section.id }}"] .position-{{ forloop.index }}.block-text-wrapper .h4,
                  [data-section-id="{{ section.id }}"] .position-{{ forloop.index }}.block-text-wrapper .h5,
                  [data-section-id="{{ section.id }}"] .position-{{ forloop.index }}.block-text-wrapper .h6,
                  [data-section-id="{{ section.id }}"] .position-{{ forloop.index }}.block-text-wrapper .title{
                    color: {{ block.settings.heading_color }};
                    margin-bottom: 20px;
                  }
                  [data-section-id="{{ section.id }}"] .position-{{ forloop.index }}.block-text-wrapper a{
                    color: {{ block.settings.link_color }};
                  }
                  [data-section-id="{{ section.id }}"] .position-{{ forloop.index }}.block-text-wrapper a:hover{
                    color: {{ block.settings.link_hover_color }};
                  }
                  @media (max-width: 767px) {
                    [data-section-id="{{ section.id }}"] .position-{{ forloop.index }}.block-text-wrapper h1,
                    [data-section-id="{{ section.id }}"] .position-{{ forloop.index }}.block-text-wrapper h2,
                    [data-section-id="{{ section.id }}"] .position-{{ forloop.index }}.block-text-wrapper h3,
                    [data-section-id="{{ section.id }}"] .position-{{ forloop.index }}.block-text-wrapper h4,
                    [data-section-id="{{ section.id }}"] .position-{{ forloop.index }}.block-text-wrapper h5,
                    [data-section-id="{{ section.id }}"] .position-{{ forloop.index }}.block-text-wrapper h6,
                    [data-section-id="{{ section.id }}"] .position-{{ forloop.index }}.block-text-wrapper .h1,
                    [data-section-id="{{ section.id }}"] .position-{{ forloop.index }}.block-text-wrapper .h2,
                    [data-section-id="{{ section.id }}"] .position-{{ forloop.index }}.block-text-wrapper .h3,
                    [data-section-id="{{ section.id }}"] .position-{{ forloop.index }}.block-text-wrapper .h4,
                    [data-section-id="{{ section.id }}"] .position-{{ forloop.index }}.block-text-wrapper .h5,
                    [data-section-id="{{ section.id }}"] .position-{{ forloop.index }}.block-text-wrapper .h6,
                    [data-section-id="{{ section.id }}"] .position-{{ forloop.index }}.block-text-wrapper .title{
                      margin-bottom: 15px;
                    }
                  }
                </style>
              {% endif %}
            {% else %}
              {% include 'gp-block-heading' %}
          {% endcase %}
        {% endfor %}
      {% endif %}
    </div>
  </div>
</div>
