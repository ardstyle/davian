{% include 'gp-section-style' %}
<div data-section-id="{{ section.id }}" data-section-type="gp-countdown-section" class="gp-section-wrapper {% unless section.settings.fullwidth %}not-fullwidth-section{% endunless %}">
  <div class="gp-countdown gp-section-inner">
    <div class="row">
      {% if section.blocks.size > 0 %}
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'countdown' %}
              <div class="col-12 gp-countdown-wrapper" data-position="{{ forloop.index }}" {{ block.shopify_attributes }}>
                <div class="countdown" data-year="{{ block.settings.until_year }}" data-month="{{ block.settings.until_month }}" data-day="{{ block.settings.until_day }}" data-text-day="{{ 'general.countdown.days' | t }}" data-text-hour="{{ 'general.countdown.hours' | t }}" data-text-min="{{ 'general.countdown.mins' | t }}" data-text-sec="{{ 'general.countdown.secs' | t }}" ></div>
              </div>
              <style>
                {% if block.settings.text_color != blank %}
                  [data-section-id="{{ section.id }}"] .gp-countdown-wrapper[data-position="{{ forloop.index }}"] .countdown .text{
                    color: {{ block.settings.text_color }};
                  }
                {% endif %}
                {% if block.settings.number_color != blank %}
                  [data-section-id="{{ section.id }}"] .gp-countdown-wrapper[data-position="{{ forloop.index }}"] .countdown .number,
                  [data-section-id="{{ section.id }}"] .gp-countdown-wrapper[data-position="{{ forloop.index }}"] .countdown .count-dot{
                    color: {{ block.settings.number_color }};
                  }
                {% endif %}
              </style>
            {% else %}
              {% include 'gp-block-heading' %}
          {% endcase %}
        {% endfor %}
      {% endif %}
    </div>
  </div>
</div>
