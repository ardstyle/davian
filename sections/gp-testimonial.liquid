{% include 'gp-section-style' %}
<div data-section-id="{{ section.id }}" data-section-type="gp-testimonial-section" class="gp-section-wrapper {% unless section.settings.fullwidth %}not-fullwidth-section{% endunless %}">
  <div class="gp-testimonials gp-section-inner">
    <div class="row">
      {% if section.blocks.size > 0 %}
        <div class="col-12">
          <div class="testimonial-slider">
            {% for block in section.blocks %}
              <div class="testimonial-item">
                {% if block.settings.heading_content != blank %}
                  <div class="title">{{ block.settings.heading_content }}</div>
                {% endif %}
                {% if block.settings.content != blank %}
                  <div class="content">{{ block.settings.content }}</div>
                {% endif %}
                {% if block.settings.image != blank %}
                  <div class="avatar margin-top30"><img src="{{ block.settings.image | img_url: 'master' }}" alt="" /></div>
                {% endif %}
                {% if block.settings.name != blank %}
                  <div class="information margin-top30">
                    <div class="name">{{ block.settings.name }}</div>
                    {% if block.settings.job != blank %}
                      <div class="job">{{ block.settings.job }}</div>
                    {% endif %}
                  </div>
                {% endif %}
              </div>
            {% endfor %}
          </div>
        </div>  
      {% endif %}
    </div>
  </div>
</div>
{% schema %}
  {
    "name": "GPS Testimonial",
    "class": "index-section",
    "settings": [
      {
				"type": "header",
				"content": "Common settings"
			},
      {
        "type": "checkbox",
        "id": "fullwidth",
        "label": "Fullwidth",
        "default": true
      },
      {
        "type": "color",
        "id": "background_color",
        "label": "Background color",
        "default": "#F8F8F8"
      },
      {
        "type": "image_picker",
        "id": "background_image",
        "label": "Background image"
      },
      {
        "type": "checkbox",
        "id": "background_cover",
        "label": "Background cover",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "background_parallax",
        "label": "Background parallax",
        "default": false
      },
      {
        "type": "select",
        "id": "background_repeat",
        "label": "Background repeat",
        "default": "no-repeat",
        "options": [
          {
            "value": "no-repeat",
            "label": "No repeat"
          },
          {
            "value": "repeat",
            "label": "Repeat"
          },
          {
            "value": "repeat-x",
            "label": "Repeat-x"
          },
          {
            "value": "repeat-y",
            "label": "Repeat-y"
          }
        ]
      },
      {
        "type": "select",
        "id": "background_pos_x",
        "label": "Background position(x)",
        "default": "center",
        "options": [
          {
            "value": "left",
            "label": "Left"
          },
          {
            "value": "center",
            "label": "Center"
          },
          {
            "value": "right",
            "label": "Right"
          }
        ]
      },
      {
